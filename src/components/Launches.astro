---
import { getLatestLaunches } from "../services/spacex";
import CardLaunch from "./CardLaunch.astro";

const launches = await getLatestLaunches();
---

<div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
  {
    launches.map(({ id, details, flight_number, success, links }) => (
      <CardLaunch id={id} details={details} flightNumber={flight_number} success={success} img={links.patch.small} />
    ))
  }
</div>
